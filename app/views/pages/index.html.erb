
<div class="ad-bd">
  <h1><%= raw(@page_title) %></h1>

    <%= link_to new_page_path, class: "btn btn-primary" do %>
      <span class='fa fa-plus'></span> Add Page
    <% end %>

    <div>
        <table class="table table-hover  table-responsive">
          <thead>
            <tr>
              <th>Name</th>
              <th>Title</th>
              <th>Body</th>
              <th>Visible</th>
              <th>Home?</th>
              <th>Permalink</th>
              <th>Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
              <% @pages.each do |page| %>
              <tr>
                <td><%= page.name %></td>
                <td><%= page.title %></td>
                <td><%= truncate(strip_tags(page.body), :length => 40) %></td>
                <td><%= page.visible %></td>
                <td><%= page.home %></td>
                <td><%= link_to "#{page.permalink}", "/#{page.permalink}" %></td>
                <td><%= page.updated_at.strftime("  %b %d, %Y - %l:%M:%S  ").in_time_zone('EST') %></td>
                <td>
                  <div class="btn-group">
        						<%= link_to edit_page_path(page), class: "btn btn-primary has-tooltip", "data-toggle" => "tooltip", title:"Edit Page" do %>
                      <span class='fa fa-pencil'></span>
                    <% end %>
                    <%= link_to page_path(page), method: :delete, class: "btn btn-danger has-tooltip", "data-toggle" => "tooltip", title:"Delete Page", data: {confirm: 'Are you sure you want to delete this?'} do %>
                      <span class='fa fa-times'></span>
                    <% end %>
                  </div>

                </td>
             </tr>
          <% end %>
         </tbody>
        </table>
      </div>
</div>
